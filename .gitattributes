# Auto detect text files and normalize line endings to LF
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# JSON, YAML, TOML
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf

# Markdown
*.md text eol=lf

# CSV and TSV
*.csv text eol=lf
*.tsv text eol=lf

# Binary files
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.o binary
*.a binary
*.lib binary
*.dll binary
*.exe binary
*.pdb binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.rar binary
*.7z binary
